{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "js.neutralino.sample",
  "version": "0.1.0-beta",
  "defaultMode": "window",
  "documentRoot": "/resources/",
  "url": "/html/index.html",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "debug.log",
    "filesystem.*"
  ],
  "globalVariables": {
    "TEST1": "Hello",
    "TEST2": [
      2,
      4,
      5
    ],
    "TEST3": {
      "value1": 10,
      "value2": {}
    }
  },
  "modes": {
    "window": {
      "title": "Baguio Central University's Library Management System",
      "width": 1366,
      "height": 768,
      "minWidth": 1366,
      "minHeight": 768,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/resources/icons/appIcon.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    },
    "browser": {
      "globalVariables": {
        "TEST": "Test value browser"
      },
      "nativeBlockList": []
    },
    "cloud": {
      "url": "/resources/#cloud",
      "nativeAllowList": [
        "app.*",
        "os.*",
        "debug.log",
        "filesystem.*"
      ]
    },
    "chrome": {
      "width": 1366,
      "height": 768,
      "args": "--user-agent=\"Neutralinojs chrome mode\"",
      "nativeBlockList": [
      ]
    }
  },
  "cli": {
    "binaryName": "BCULMS",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "6.2.0",
    "clientVersion": "6.2.0",
    "nativeFilesystem": {
        "enabled": true,
        "allowedPaths": [
            "C:/Users/%userprofile%/Documents/BCULMS/data"
        ]
    }
  },
  "permissions": {
    "filesystem": {
      "readFile": true,
      "writeFile": true,
      "readDirectory": true
    }
  }
}